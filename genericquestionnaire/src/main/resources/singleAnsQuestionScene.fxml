<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ui.SingleAnsQuestionController">
    <children>
        <TextField fx:id="questionTextField" disable="true" editable="false" layoutX="8.0" layoutY="8.0"
                   prefHeight="117.0" prefWidth="592.0"/>
        <TextArea fx:id="ansTextArea" layoutX="8.0" layoutY="176.0" prefHeight="147.0"
                  prefWidth="600.0"/>
        <Button fx:id="nextBtn" layoutX="287.0" layoutY="354.0" mnemonicParsing="false"
                onAction="#rebuildNextViewForQuestion" text="Next"/>
        <ImageView fx:id="questionImgView" fitHeight="117.0" fitWidth="592.0" layoutX="9.0" layoutY="8.0"
                   pickOnBounds="true" preserveRatio="true" visible="false"/>
        <Button fx:id="saveBtn" layoutX="235.0" layoutY="354.0" mnemonicParsing="false" onAction="#saveCurrentAnswer"
                text="Save"/>
    </children>
</AnchorPane>
